<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiRuta9.Interfaces.Megabus">

    <StackLayout BackgroundColor="#028e44" Padding="10,150,10,10" Spacing="40">
        <Button Text="Ruta 1"
                TextTransform="Default"
                FontAttributes="Bold"
                BackgroundColor="White"
                TextColor="#028e44"
                CornerRadius="15"
                WidthRequest="250"
                HeightRequest="70"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"/>

        <Label Text="|"
               TextColor="White"
               FontSize="Body"
               HorizontalOptions="Center"/>

        <Button Text="Ruta 2"
                TextTransform="Default"
                FontAttributes="Bold"
                BackgroundColor="White"
                TextColor="#028e44"
                CornerRadius="15"
                WidthRequest="250"
                HeightRequest="70"
                HorizontalOptions="Center"/>

        <Label Text="|"
               TextColor="White"
               FontSize="Body"
               HorizontalOptions="Center"/>

        <Button Text="Ruta 3"
                TextTransform="Default"
                FontAttributes="Bold"
                BackgroundColor="White"
                TextColor="#028e44"
                CornerRadius="15"
                WidthRequest="250"
                HeightRequest="70"
                HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>