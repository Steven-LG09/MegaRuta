<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiRuta9.Interfaces.Usuario">

    <StackLayout BackgroundColor="#028e44" Padding="0,40,0,0" Spacing="40">

        <Label Text="_______________________________________________"
               TextColor="White"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"
               FontSize="20"
               HeightRequest="30"
               WidthRequest="400"/>

        <Label Text="!!Bienvenido a Mi Ruta!!"
               TextColor="YellowGreen"
               FontSize="20"
               TextTransform="Uppercase"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Image Source="Mi_Ruta.png"
               HeightRequest="150"
               WidthRequest="150"
               HorizontalOptions="Center"
               Aspect="Fill"/>

        <Label Text="¿Que desea hacer?"
               FontSize="Medium"
               FontAttributes="Italic"
               HorizontalOptions="Center"/>

        <Grid HorizontalOptions="Center" ColumnSpacing="10">
            <Button Text="- - - Ver Rutas- - -"
                    TextTransform="None"
                    FontAttributes="Italic"
                    BackgroundColor="White"
                    TextColor="#028e44"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked_1"
                    Grid.Row="0"/>

            <Button Text="- -Mis Rutas Favoritas- -"
                    TextTransform="None"
                    FontAttributes="Italic"
                    BackgroundColor="White"
                    TextColor="#028e44"
                    CornerRadius="20"
                    WidthRequest="300"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked_3"
                    Grid.Row="1"/>

            <Button Text="- - - - Pqrs- - - -"
                    TextTransform="None"
                    FontAttributes="Italic"
                    BackgroundColor="White"
                    TextColor="#028e44"
                    CornerRadius="20"
                    WidthRequest="300"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Grid.Row="2"/>
        </Grid>
        <Label Text="_______________________________________________"
               TextColor="White"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"
               FontSize="20"
               HeightRequest="30"
               WidthRequest="400"/>
    </StackLayout>
</ContentPage>